def make_grid(k):
    
    G = nx.grid_graph([k*2 + 1,k*2 + 1])
    for x in G:
        G.node[x]["level"] = x[1]
        if x[1] == k:
            G.node[x]["half"] = "M"
        if x[1] > k:
            G.node[x]["half"] = "H"
        if x[1] < k:
            G.node[x]["half"] = "G"
        G.name = "gridgraph"
        G.graph["depth"]= k
    return G



global T
k = 4
G = make_grid(k)

path, T = make_path(k,100000, 0)
#Be cautious that the graph size is already growing exponentially -- what we are really looking for is double exponential growth in the cut off


stat = balance
stat_list = [stat(x) for x in path]
make_time_series(path, stat)
for s in range(5):
    viz(T,k, path[1000 + s])



